<Window x:Class="Hospital.View.Notifications"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital.View"
        mc:Ignorable="d"
        Title="Notifications" Height="280" Width="400">
    <Grid>
        <Button Width="200" Height="40" VerticalAlignment="Top" Margin="40" Click="CreateNotification_Click">_Create Notification</Button>
        <Button Width="200" Height="40" Click="ListNotifications_Click">_List notifications</Button>
        <Button Width="200" Height="40" VerticalAlignment="Bottom" Margin="40" Click="ChooseNotificationHours">_Change hours before notification</Button>
    </Grid>
</Window>
